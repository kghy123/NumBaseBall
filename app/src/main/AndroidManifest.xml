<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kghy1234gmail.numbaseball">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="숫자 야구 게임"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".SingleGameActivity" />
        <activity android:name=".GameOverActivity" />
        <activity android:name=".ServerActivity" />
        <activity android:name=".ClientActivity" />
        <activity
            android:name=".InputNumDialog"
            android:theme="@style/AppTheme.Dialog" />
        <activity android:name=".BTDeviceListActivity"
            android:label="BT DEVICE LIST"
            android:theme="@style/AppTheme.Dialog"></activity>
    </application>

</manifest>